[
    {   "name": "ohNet",
        "type": "openhome",
        "platform-specific": true,
        "version": "1.4.1749",
        "archive-suffix": "-${debugmode}",
        "main-dir": "${dest}${name}-${platform}-${debugmode}",
        "configure-args": [
            "--ohnet-lib-dir", "${main-dir}/lib",
            "--ohnet-include-dir", "${main-dir}/include/ohnet"
        ],
        "source-git": "https://github.com/openhome/ohNet.git"
    },
    {   "name": "ohWafHelpers",
        "type": "openhome",
        "platform-specific": false,
        "version": "0.0.83",
        "archive-filename": "${name}-${version}.tar.gz",
        "source-git": "https://github.com/openhome/ohWafHelpers.git"
    },
    {   "name": "TestTones",
        "type": "external",
        "version": "1.9",
        "archive-path": "http://core.linn.co.uk/~artifacts/artifacts/testtones/TestTones-${version}.zip",
        "dest": "dependencies/AnyPlatform/TestTones/"
    },
    {   "name":             "testharness",
        "version":          "0.1.36",
        "type":             "openhome",
        "archive-filename": "${name}-${version}.tar.gz",
        "dest":             "dependencies/AnyPlatform/"
    },
    {   "name": "libplatform",
        "type": "internal",
        "version": "0.0.146",
        "archive-suffix": "-${debugmode}",
        "platform-ignore": {
            "Core-armv5": false,
            "Core-armv6": false,
            "Core-ppc32": false,
            "*": true },
        "ignore": "${platform-ignore[$platform]}"
    },
    {   "name":             "libosa",
        "type":             "internal",
        "version":          "0.0.194",
        "archive-suffix":   "-Release",
        "platform-ignore": {
            "Core-armv5": false,
            "Core-armv6": false,
            "Core-ppc32": false,
            "*": true },
        "ignore":           "${platform-ignore[$platform]}"
    },
    {   "name":             "transmute",
        "version":          "0.0.14",
        "type":             "internal",
        "archive-filename": "${name}-${version}.tar.gz",
        "platform-ignore": {
            "Core-armv5": false,
            "Core-armv6": false,
            "Core-ppc32": false,
            "*": true },
        "ignore":           "${platform-ignore[$platform]}",
        "dest":             "dependencies/AnyPlatform/"
    },
    {   "name":             "volkano-tools",
        "version":          "0.0.5",
        "type":             "internal",
        "archive-filename": "${name}-${version}.tar.gz",
        "platform-ignore": {
            "Core-armv5": false,
            "Core-armv6": false,
            "Core-ppc32": false,
            "*": true },
        "ignore":           "${platform-ignore[$platform]}",
        "dest":             "dependencies/AnyPlatform/${name}/"
    },
    {   "name": "openssl",
        "type": "openhome",
        "platform-specific": true,
        "version": "0.2.60",
        "archive-filename": "${name}-${version}-${archive-platform}-${debugmode}.tar.bz2"
    },
    {
        "name": "FunctionalTest",
        "type": "openhome",
        "version": "0.0.630",
        "platform-specific": false,
        "archive-filename": "FunctionalTest-${version}.zip",
        "dest": "dependencies/AnyPlatform/FunctionalTest"
    },
    {
        "name": "FTDataPublic",
        "type": "openhome",
        "version": "0.0.9",
        "platform-specific": false,
        "archive-filename": "FTDataPublic-${version}.zip",
        "dest": "dependencies/AnyPlatform/FunctionalTestData",
        "platform-ignore": {
            "Linux-ppc32": true,
            "Linux-armhf": true,
            "*": false },
        "ignore":           "${platform-ignore[$platform]}"
    },
    {
        "name": "FTDataPrivate",
        "type": "internal",
        "version": "0.0.5",
        "platform-specific": false,
        "archive-filename": "FTDataPrivate-${version}.zip",
        "dest": "dependencies/AnyPlatform/FunctionalTestData",
        "platform-ignore": {
            "Linux-ppc32": true,
            "Linux-armhf": true,
            "*": false },
        "ignore":           "${platform-ignore[$platform]}"
    }
]
