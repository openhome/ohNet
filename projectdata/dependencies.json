[
    {   "name": "ohNet",
        "type": "openhome",
        "platform-specific": true,
        "version": "1.8.2268",
        "archive-suffix": "-${debugmode}",
        "main-dir": "${dest}${name}-${platform}-${debugmode}",
        "configure-args": [
            "--ohnet-lib-dir", "${main-dir}/lib",
            "--ohnet-include-dir", "${main-dir}/include/ohnet"
        ],
        "source-git": "https://github.com/openhome/ohNet.git"
    },
    {   "name": "ohWafHelpers",
        "type": "openhome",
        "platform-specific": false,
        "version": "0.0.92",
        "cross-check": false,
        "archive-filename": "${name}-${version}.tar.gz",
        "source-git": "https://github.com/openhome/ohWafHelpers.git"
    },
    {   "name": "TestTones",
        "type": "external",
        "version": "1.9",
        "cross-check": false,
        "archive-path": "http://core.linn.co.uk/~artifacts/artifacts/testtones/TestTones-${version}.zip",
        "dest": "dependencies/AnyPlatform/TestTones/"
    },
    {   "name": "libplatform",
        "type": "internal",
        "version": "0.11.398",
        "cross-check": false,
        "archive-suffix": "-${debugmode}",
        "platform-ignore": {
            "Core-ppc32": false,
            "*": true },
        "ignore": "${platform-ignore[$platform]}"
    },
    {   "name":             "libosa",
        "type":             "internal",
        "version":          "0.1.237",
        "cross-check":      false,
        "archive-suffix":   "-Release",
        "platform-ignore": {
            "Core-ppc32": false,
            "*": true },
        "ignore":           "${platform-ignore[$platform]}"
    },
    {   "name": "openssl",
        "type": "openhome",
        "platform-specific": true,
        "version": "0.2.61",
        "archive-filename": "${name}-${version}-${archive-platform}-${debugmode}.tar.bz2"
    },
    {   "name":             "testharness",
        "version":          "0.1.43",
        "cross-check":      false,
        "type":             "openhome",
        "archive-filename": "${name}-${version}.tar.gz",
        "dest":             "dependencies/AnyPlatform/"
    },
    {   "name":             "Reprog",
        "version":          "0.1.70",
        "cross-check":      false,
        "type":             "internal",
        "archive-filename": "${name}-${version}-${host-platform}-Release.tar.gz",
        "platform-ignore": {
            "Core-ppc32": false,
            "*": true },
        "ignore":           "${platform-ignore[$platform]}",
        "dest":             "dependencies/${host-platform}/Reprog/"
    },
    {
        "name":             "hardware",
        "version":          "0.0.113",
        "cross-check": false,
        "type":             "internal",
        "archive-filename": "${name}-Lib-${version}.tar.gz",
        "dest":             "dependencies/AnyPlatform/${name}/"
    },
    {   "name":             "transmute",
        "version":          "0.2.48",
        "cross-check":      false,
        "type":             "internal",
        "archive-filename": "${name}-${version}.tar.gz",
        "platform-ignore": {
            "Core-ppc32": false,
            "*": true },
        "ignore":           "${platform-ignore[$platform]}",
        "dest":             "dependencies/AnyPlatform/"
    },
    {
        "name": "FunctionalTest",
        "type": "openhome",
        "version": "0.0.798",
        "cross-check": false,
        "platform-specific": false,
        "archive-filename": "FunctionalTest-${version}.zip",
        "dest": "dependencies/AnyPlatform/FunctionalTest"
    },
    {
        "name": "FTDataPublic",
        "type": "openhome",
        "version": "0.0.9",
        "cross-check": false,
        "platform-specific": false,
        "archive-filename": "FTDataPublic-${version}.zip",
        "dest": "dependencies/AnyPlatform/FunctionalTestData",
        "platform-ignore": {
            "Linux-ppc32": true,
            "Linux-armhf": true,
            "*": false },
        "ignore":           "${platform-ignore[$platform]}"
    },
    {
        "name": "FTDataPrivate",
        "type": "internal",
        "version": "0.0.5",
        "cross-check": false,
        "platform-specific": false,
        "archive-filename": "FTDataPrivate-${version}.zip",
        "dest": "dependencies/AnyPlatform/FunctionalTestData",
        "platform-ignore": {
            "Linux-ppc32": true,
            "Linux-armhf": true,
            "*": false },
        "ignore":           "${platform-ignore[$platform]}"
    }
]
