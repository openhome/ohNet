<?xml version="1.0"?>
<scpd xmlns="urn:schemas-upnp-org:service-1-0">
    <specVersion>
        <major>1</major>
        <minor>0</minor>
    </specVersion>

    <actionList>
        <action>
            <name>Enabled</name>
            <argumentList>
                <argument>
                    <name>Value</name>
                    <direction>out</direction>
                    <relatedStateVariable>Enabled</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>SetEnabled</name>
            <argumentList>
                <argument>
                    <name>Value</name>
                    <direction>in</direction>
                    <relatedStateVariable>Enabled</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>Channel</name>
            <argumentList>
                <argument>
                    <name>Value</name>
                    <direction>out</direction>
                    <relatedStateVariable>Channel</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>SetChannel</name>
            <argumentList>
                <argument>
                    <name>Value</name>
                    <direction>in</direction>
                    <relatedStateVariable>Channel</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>Metadata</name>
            <argumentList>
                <argument>
                    <name>Value</name>
                    <direction>out</direction>
                    <relatedStateVariable>Metadata</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>Audio</name>
            <argumentList>
                <argument>
                    <name>Value</name>
                    <direction>out</direction>
                    <relatedStateVariable>Audio</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>Status</name>
            <argumentList>
                <argument>
                    <name>Value</name>
                    <direction>out</direction>
                    <relatedStateVariable>Status</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>InfoAvailable</name>
            <argumentList>
                <argument>
                    <name>Value</name>
                    <direction>out</direction>
                    <relatedStateVariable>InfoAvailable</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
        <action>
            <name>TimeAvailable</name>
            <argumentList>
                <argument>
                    <name>Value</name>
                    <direction>out</direction>
                    <relatedStateVariable>TimeAvailable</relatedStateVariable>
                </argument>
            </argumentList>
        </action>
    </actionList>
    
    <serviceStateTable>
        <stateVariable sendEvents="yes">
            <name>Enabled</name>
            <dataType>boolean</dataType>
        </stateVariable>        
        <stateVariable sendEvents="yes">
            <name>Channel</name>
            <dataType>ui4</dataType>
            <allowedValueRange>
                <minimum>0</minimum>
                <maximum>65535</maximum>
                <step>1</step>
            </allowedValueRange>
        </stateVariable>        
        <stateVariable sendEvents="yes">
            <name>Metadata</name>
            <dataType>string</dataType>
        </stateVariable>
        <stateVariable sendEvents="yes">
            <name>Audio</name>
            <dataType>boolean</dataType>
        </stateVariable>
        <stateVariable sendEvents="yes">
            <name>Status</name>
            <dataType>string</dataType>
            <allowedValueList>
                <allowedValue>Sending</allowedValue>
                <allowedValue>Ready</allowedValue>
                <allowedValue>Blocked</allowedValue>
                <allowedValue>Inactive</allowedValue>
            </allowedValueList>
        </stateVariable>
        <stateVariable sendEvents="yes">
            <name>InfoAvailable</name>
            <dataType>boolean</dataType>
        </stateVariable>        
        <stateVariable sendEvents="yes">
            <name>TimeAvailable</name>
            <dataType>boolean</dataType>
        </stateVariable>        
    </serviceStateTable>
</scpd>
